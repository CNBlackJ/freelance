<%= stylesheet_link_tag'posts' %>

<% if notice %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <p id="notice">
      <strong>Warning!</strong>   <%= notice %>
    </p>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="pull-left col-md-2">
        <h4>
          CATOGORIES
        </h5>
      </div>

      <div class="pull-right col-md-2">
        <div class="btn-group">
          <%= link_to 'New Category', new_category_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body padding-0">
    <table class="table table-hover bg-white">
      <thead>
        <tr>
          <th>#</th>
          <th>Category Key</th>
          <th>Category Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each_with_index do |category, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.cat_key %></td>
            <td><%= category.cat_name %></td>
            <td>
                <%= link_to 'Show', category, class: 'btn btn-default' %>
                <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-info' %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>